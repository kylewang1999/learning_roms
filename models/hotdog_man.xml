<?xml version="1.0" encoding="utf-8"?>
<mujoco model="hotdog_man">

	<!-- Simulation Parameters -->
	<option timestep="0.001" iterations="15" ls_iterations="15" solver="Newton" gravity="0 0 -9.81">
		<flag eulerdamp="disable"/>
	</option>

	<!-- Set angles to be in radians -->
	<compiler angle="radian" autolimits="true" eulerseq="zyx"/>

	<!-- Default properties -->
    <!-- <default>
        <joint damping="0.001" armature="0.01" frictionloss="0.1"/>
    </default> -->

	<!-- Robot -->
	<worldbody>
	
        <!-- Torso -->
        <body name="torso" pos="0 0 0">
            <inertial pos="0 0 0.25" mass="4.0" diaginertia="0.5 0.5 0.5"/>
            <geom name="torso" type="capsule" size="0.04 0.25" pos="0 0 0.25" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/> 
            <joint name="torso_x" type="slide" axis="1 0 0"/>
            <joint name="torso_z" type="slide" axis="0 0 1"/>
            <joint name="torso_pitch" type="hinge" axis="0 1 0"/>

            <!-- Left leg -->
            <body name="left_thigh" pos="0 0.08 0">
                <inertial pos="0 0 -0.2" mass="2.0" diaginertia="0.5 0.5 0.5"/>
                <geom name="left_thigh" type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                <joint name="left_hip_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="-1.57 1.57"/>

                <!-- Left Shin -->
                <body name="left_shin" pos="0 0 -0.4">
                    <inertial pos="0 0 -0.2" mass="1.0" diaginertia="0.5 0.5 0.5"/>
                    <geom name="left_shin" type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                    <joint name="left_knee_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="0 2.5"/>
                </body>

            </body>

            <!-- Right leg -->
            <body name="right_thigh" pos="0 -0.08 0">
                <inertial pos="0 0 -0.2" mass="2.0" diaginertia="0.5 0.5 0.5"/>
                <geom name="right_thigh" type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                <joint name="right_hip_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="-1.57 1.57"/>

                <!-- Right Shin -->
                <body name="right_shin" pos="0 0 -0.4">
                    <inertial pos="0 0 -0.2" mass="1.0" diaginertia="0.5 0.5 0.5"/>
                    <geom name="right_shin" type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                    <joint name="right_knee_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="0 2.5"/>
                </body>

            </body>

        </body>
	</worldbody>

    <!-- Actuators -->
	<actuator>
		<motor name="hip_left_motor" joint="left_hip_joint" ctrllimited="false" gear="1"/>
    	<motor name="knee_left_motor" joint="left_knee_joint" ctrllimited="false" gear="1"/>
		<motor name="hip_right_motor" joint="right_hip_joint" ctrllimited="false" gear="1"/>
		<motor name="knee_right_motor" joint="right_knee_joint" ctrllimited="false" gear="1"/>
	</actuator>

    <!-- Specify the light settings -->
    <asset>
        <texture type="skybox" builtin="flat" rgb1="0 0 0" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.9 0.9 0.9" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>
        <!-- Add light -->
        <light pos="1.0 0.5 0.0" dir="0 0 -1" directional="true"/>  
    
        <!-- Add the Floor -->
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    </worldbody>

</mujoco>