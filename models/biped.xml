<?xml version="1.0" encoding="utf-8"?>
<mujoco model="biped">

	<!-- Simulation Parameters -->
	<option timestep="0.0025" iterations="20" ls_iterations="15" solver="Newton">
		<flag eulerdamp="disable"/>
	</option>

    <!-- Inertia is computed from geometry -->
    <compiler inertiafromgeom="true" />

	<!-- Default properties -->
    <default>
        <joint damping="0.1" armature="0.00" frictionloss="0.1"/>
    </default>

    <asset>
        <texture type="skybox" builtin="flat" rgb1="0 0 0" rgb2="0 0 0" width="512" height="512"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.9 0.9 0.9" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

	<!-- Robot -->
	<worldbody>

        <!-- Add light -->
        <light pos="-0.5 0.0 2.0" dir="0 0 -1" directional="true"/>  

        <!-- Ground -->
        <geom name="ground" type="plane" size="0 0 0.01" material="groundplane"/>
	
        <!-- Torso -->
        <body name="torso" pos="0 0 0">
            <!-- <inertial pos="0 0 0.25" mass="4.0" diaginertia="0.5 0.5 0.5"/> -->
            <geom name="torso" type="capsule" size="0.045 0.25" pos="0 0 0.25" density="2000" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/> 
            <joint name="torso_x" type="slide" axis="1 0 0"/>
            <joint name="torso_z" type="slide" axis="0 0 1"/>
            <joint name="torso_pitch" type="hinge" axis="0 -1 0"/>

            <!-- Left leg -->
            <body name="left_thigh" pos="0 0.09 0">
                <geom name="left_thigh" type="capsule" size="0.045 0.2" pos="0 0 -0.2" density="400" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                <joint name="left_hip_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="-90.0 90.0"/>

                <!-- Left Shin -->
                <body name="left_shin" pos="0 0 -0.4">
                    <geom name="left_shin" type="capsule" size="0.045 0.2" pos="0 0 -0.2" density="400" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                    <joint name="left_knee_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="-140.0 0.0"/>
                    <site name="left_foot_site" pos="0 0 -0.4" size="0.01" type="sphere" rgba="0 0 1 1"/>
                </body>

            </body>

            <!-- Right leg -->
            <body name="right_thigh" pos="0 -0.09 0">
                <geom name="right_thigh" type="capsule" size="0.045 0.2" pos="0 0 -0.2" density="400" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                <joint name="right_hip_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="-90.0 90.0"/>

                <!-- Right Shin -->
                <body name="right_shin" pos="0 0 -0.4">
                    <geom name="right_shin" type="capsule" size="0.045 0.2" pos="0 0 -0.2" density="400" rgba="0.9 0.9 0.9 0.5" conaffinity="1" contype="1"/>
                    <joint name="right_knee_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="-140.0 0.0"/>
                    <site name="right_foot_site" pos="0 0 -0.4" size="0.01" type="sphere" rgba="1 0 0 1"/>
                </body>

            </body>

        </body>
	</worldbody>

    <!-- Actuators -->
	<actuator>
		<motor name="hip_left_motor" joint="left_hip_joint" ctrllimited="true" ctrlrange="-1 1" gear="100"/>
    	<motor name="knee_left_motor" joint="left_knee_joint" ctrllimited="true" ctrlrange="-1 1" gear="100"/>
		<motor name="hip_right_motor" joint="right_hip_joint" ctrllimited="true" ctrlrange="-1 1" gear="100"/>
		<motor name="knee_right_motor" joint="right_knee_joint" ctrllimited="true" ctrlrange="-1 1" gear="100"/>
	</actuator>

    <!-- default configuration (when you press "Load key" button) -->
    <keyframe>
        <key name="default" qpos="0 0.85 0 0 0 0 0" qvel="0 0 0 0 0 0 0"/>
        <key name="standing" qpos="0 0.83 0 0.22 -0.415 0.22 -0.415 " qvel="0 0 0 0 0 0 0"/>
    </keyframe>

</mujoco>