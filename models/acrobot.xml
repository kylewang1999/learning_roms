<mujoco model="acrobot">
     <!-- Simulation settings, NOTE: these parameters make a difference in RL stability. Acrobot is chaotic-->
    <option solver="Newton" timestep="0.01" iterations="10" ls_iterations="4" />

    <!-- Inertia is computed from geometry -->
    <compiler inertiafromgeom="true" />

    <!-- Default properties -->
    <default>
        <joint armature="0.0" damping="0.75" limited="true" />
        <geom contype="0" friction="1.0 0.1 0.1" />
    </default>

    <!-- Memory settings (default is 1000) -->
    <size nstack="3000" />

    <worldbody>

        <!-- Origin -->
        <geom name="ball" pos="0 0 1.5" type="sphere" size="0.06" rgba="0.8 0.2 0.2 1"/>

        <!-- Link 1 -->
        <body name="link1" pos="0 0 1.5">
            <geom name="link1" fromto="0 0 0 0 0 0.6" size="0.05 0.3" type="capsule" rgba="0.6 0.6 0.6 1.0"/>
            <joint axis="0 -1 0" name="wrist" pos="0 0 0" range="-inf inf" type="hinge" />

            <!-- Link 2 -->
            <body name="link2" pos="0 0 0.6">
                <geom name="link2" fromto="0 0 0 0 0 0.6" size="0.05 0.3" type="capsule" rgba="0.6 0.6 0.6 1.0"/>
                <joint axis="0 -1 0" name="waist" pos="0 0 0" range="-inf inf" type="hinge" />
            </body>

        </body>

    </worldbody>

    <!-- Actuator -->
    <actuator>
        <motor name="waist" joint="waist" ctrllimited="true" ctrlrange="-1 1" gear="25"/>
    </actuator>

    <!-- default configuration (when you press "Load key" button) -->
    <keyframe>
        <key name="default" qpos="3.14 0" qvel="0 0" />
    </keyframe>

    <!-- Specify the light settings -->
    <asset>
        <texture type="skybox" builtin="flat" rgb1="0 0 0" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.9 0.9 0.9" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>
        <!-- Add light -->
        <light pos="1.0 0.5 0.0" dir="0 0 -1" directional="true"/>  
    
        <!-- Add the Floor -->
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    </worldbody>

</mujoco>